#include<iostream>
using namespace std;
int binarysearch(int arr[],int low, int high,int key)
{
	while(low <= high){
		int mid=(high+low)/2;
		if (arr[mid]==key)
		{
			return mid;
		}
		if (arr[mid]<key){
			return binarysearch(arr,mid+1,high,key);
		}
	    else return binarysearch(arr,low,mid-1,key);
	}
	    return  -1;
}

int main()
{
	int arr[] = {11,22,33,44,55,66,77,88,111};
	int n = sizeof(arr)/sizeof(arr[0]);
	int key = 66;
	int l = 0;
	int r = n-1;
	int index = binarysearch(arr,l,r,key);
	cout<<"element found at index = "<<index<<endl;
	
	return 0;
	
	
}
